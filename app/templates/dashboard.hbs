<Page::Header @title="Dashboard" />
<Page::Content>
  <div class="at-a-glance card">
    <div class="card-body">
      <h5 class="card-title">
        At a Glance
      </h5>
      <h5>
        {{this.model.length}}
      </h5>
      <p class="text-muted">
        Customers in pipeline
      </p>
      <h5>
        {{this.totalBudget}}
      </h5>
      <p class="text-muted">
        Total forecasted budget
      </p>
    </div>
  </div>

  <div class="top-prospects card">
    <div class="card-body">
      <h5 class="card-title">
        Top Prospects
      </h5>
      <DashboardTable @model={{this.sortedCustomers}} />
      <LinkTo @route="customers">
        See all
      </LinkTo>
    </div>
  </div>
</Page::Content>